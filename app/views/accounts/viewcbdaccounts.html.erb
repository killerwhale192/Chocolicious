<div class='row'>
	<div class='col-sm-12'>
		<div class='page-header'>
			<h1 class='pull-left'><i class='icon-dollar'></i>
				<!-- span has to be on next line to create that space between the logo and the words -->
				<span>View CBd Expenditure Accounts</span></h1>
		</div>
	</div>
</div>
<% if (session[:role].include?"smusafinsec")|| (session[:role].include?'cbdfinsec')%>
<!-- Next line still necessary? -->
<% if session[:role].include?"smusafinsec" %>
<div class='row'>
	<div class='col-sm-12'>
		<div class='box bordered-box blue-border' style='margin-bottom:0;'>
			<div class='box-header blue-background'>
				<div class='title'>
					View all CBd Expenditure Accounts
				</div>
				<div class='actions'>
					<a class="btn box-collapse btn-xs btn-link" href="#"><i></i> </a>
				</div>
			</div>
			<div class='box-content box-no-padding'>
				<div class='responsive-table'>
					<div class='scrollable-area'>
						<table class='table' style='margin-bottom:0;'>
							<tr>
								<th>Overall Budget</th>
								<% @CBD.each do|x| %>
								<th><%= x.clubid%></th>
								<%end%>
							</tr>
							<tr>
								<td><%= @totalBdgt%></td>
								<% @budgetArr.each do|x| %>
								<td><%= x%></td>
								<%end%>
							</tr>
						</table>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<hr />
<!-- CBd accounts breakdown -->
<div class='row'>
	<div class='col-sm-12'>
		<div class='box bordered-box blue-border' style='margin-bottom:0;'>
