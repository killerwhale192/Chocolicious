<div class='row'>
	<div class='col-sm-12'>
		<div class='page-header'>
			<h1 class='pull-left'><i class='icon-search'></i><span> Recommendation Results</span></h1>
		</div>
	</div>
</div>
<div class='row'>
	<div class='col-sm-12 col-lg-12'>
		<div class='box bordered-box'>
			<div class="box-content box-double-padding">
				<div class="responsive-table">
					<div class="scrollable-area">	
						<h3>Here are your results</h3>
						<table class="table table-striped" style="margin-bottom:0;">
							<tr>
								<th>Rank</th>
								<th>Name</th>
								<th>Contact</th>
								<th>Address</th>
							</tr>
							<%for i in 0..@number-1 do%>
								<%v = @result[i]%>
								<%if !v.nil?%>
									<tr>
										<td><%=i+1%></td>
										<td><%=v.name%></td>
										<td><%=v.contact%></td>
										<td><%=v.address%></td>
									</tr>
								<%end%>
							<%end%>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
