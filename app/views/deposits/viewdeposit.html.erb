<% if flash[:error] %>
<font color="red"><%= flash[:error]%></font>
<%end%>

<div class='row'>
                            <div class='col-sm-12'>
                                <div class='page-header'>
                                    <h1 class='pull-left'>
                      <i class='icon-file-alt'></i>
                      <span>My deposits</span>
                    </h1>
                                    
                                </div>
                            </div>
                        </div>

<div class='row'>

                            <div class="col-sm-12">
                                <div class="box bordered-box blue-border">
                                    <div class="box-header blue-background">
                                        <div class="title">My deposits</div>
                                        <div class="actions">
                                            <a class="btn box-remove btn-xs btn-link" href="#"><i class="icon-remove"></i>
                        </a>

                                            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                        </a>
                                        </div>
                                    </div>
                                    <div class="box-content box-no-padding">
                                        <div class="responsive-table">
                                            <div class="scrollable-area">
                                                
                                              <table class="table table-striped" style="margin-bottom:0;">
	<tr>
		<th>deposit ID</th>
		<th>deposit By</th>
		<th>Club</th>
		<th>Amount</th>
		<th>Date</th>
		<th>Receipt Nos</th>
		<th>Donor Name</th>
		<th>Donor Address</th>
		<th>Donor IC</th>
		<th>Purpose</th>
		<th>Created</th>
		<th>Updated</th>
		<th>Status</th>

		<th>Edit</th>
		<th>Submit</th>
	</tr>
	<% @normaldeposits.each do |c|%>
	<%status = c.status%>
	<%if c.remarks.nil?%>
	<tr>
	<%else%>
	<tr class = 'warning'>
	<%end%>
		<td><%=c.id%></td>
		<td><%= c.userid%></td>
		<td><%= c.clubid%></td>
		<td><%= c.amount%></td>
		<td><%= c.date%></td>
		<td><%= c.receipts%></td>
		<td><%= c.donorname%></td>
		<td><%= c.donoradd%></td>
		<td><%= c.donoric%></td>
		<td><%= c.purpose%></td>
		<td><%= c.created_at%></td>
		<td><%= c.updated_at%></td>
		<td><%= c.status%></td>
	
		<%if status == 0 || status == 12 || status == 6%>
		<td><a href="/deposits/editdeposit?id=<%=c.id%>&own=true" class="btn btn-sm btn-primary">Edit</td>
		<%if c.remarks.nil?%>
		<td><a href="/deposits/submitdeposit?id=<%=c.id%>" class="btn btn-sm btn-primary">Submit</td>
		<%else%>
		<td><a href="/deposits/resubmitdeposit?id=<%=c.id%>" class="btn btn-sm btn-primary">ReSubmit</td>
		<td><a href="#", onclick="viewremark('<%=c.remarks%>')" class="btn btn-sm btn-primary">View Remarks</a></td>
		<%end%>
		<%end%>
	</tr>
	<%end%>

</table>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>

<%=javascript_tag do%>
 
function pres(a){
	var x;
	if (confirm("You have acknowleged the deposit!")==true){
		window.location = "/deposits/submitdeposit?id="+a;
	}
	document.getElementById("pres").innerHTML = x;
}
function viewremark(a){
	
		alert(a);
	
}
<%end%>
