<div class='row'>
	<div class='col-sm-12'>
		<div class='page-header'>
			<h1 class='pull-left'><i class='icon-link'></i><span> Contribution Rate</span></h1>
		</div>
	</div>
</div>
<%if session[:role].include? 'smusafinsec'%>
<div class='row'>
	<div class='col-sm-12'>
		<div class='box bordered-box blue-border'>
			<div class='box-header blue-background'>
				<div class='title'>
					<i class='icon-link'></i>
					Set Contribution Rate
				</div>
				<div class='actions'>
					<a class="btn box-collapse btn-xs btn-link" href="#"><i></i> </a>
				</div>
			</div>
			<div class='box-content box-double-padding'>
				<h4>Current rate: <%=@contribution.rate%> %</h4>
				<%=form_for @contribution,  :url => {:action => 'setrate'} do |f| %>
				<div class='form-group'>
					<label>Set Rate</label>
					<br />
					<%=f.number_field(:rate, :step => 0.01, :min => 0, :max => 100, :class=>"form-control")%>
				</div>
				<div class='form-actions form-actions-padding' style='margin-bottom: 0;'>
					<div class='text-right'>
						<%=f.submit 'Set', :class=>"btn btn-primary btn-lg"%>
					</div>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</div>
<%end%>
