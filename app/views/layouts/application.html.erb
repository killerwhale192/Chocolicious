            </div>
        </nav>

        <section id='content'>
          
          <div class='container'>
  <div class='row' id='content-wrapper'>
    <div class='col-xs-12'>
      <% if !notice.nil? && !notice.empty? %>
      <span class="alert alert-info"><%= notice %></span>
      <% end %>
      <% if !alert.nil? && !alert.empty? %>
      <span class="alert alert-warning"><%= alert %></span>
      <% end %>
      
      <%= yield %>
      
    </div>
  </div>
</div>
        </section>
    </div>

</body>

</html>
